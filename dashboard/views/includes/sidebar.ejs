    }

    .custom-sidebar .user-panel {
        background-color: #34495e;
        padding: 10px;
        margin-bottom: 10px;
    }

    .custom-sidebar .user-panel .image img {
        border: 2px solid #ecf0f1;
    }

    .custom-sidebar .user-panel .info p {
        color: #ecf0f1;
        margin: 0;
    }

    .custom-sidebar .sidebar-form {
        margin-bottom: 10px;
    }

    .custom-sidebar .sidebar-form .form-control {
        background-color: #34495e;
        border: none;
        color: #ecf0f1;
    }

    .custom-sidebar .sidebar-form .btn-flat {
        background-color: #34495e;
        border: none;
        color: #ecf0f1;
    }

    .custom-sidebar .sidebar-menu > li.header {
        color: #bdc3c7;
        background-color: #34495e;
        padding: 10px;
        font-size: 14px;
    }

    .custom-sidebar .sidebar-menu > li > a {
        color: #ecf0f1;
    }

    .custom-sidebar .sidebar-menu > li > a:hover {
        background-color: #2980b9;
    }

    .custom-sidebar .sidebar-menu > li.active > a {
        background-color: #2980b9;
    }

    .custom-sidebar .sidebar-menu .treeview-menu > li > a {
        color: #bdc3c7;
    }

    .custom-sidebar .sidebar-menu .treeview-menu > li > a:hover {
        background-color: #2980b9;
    }
</style>